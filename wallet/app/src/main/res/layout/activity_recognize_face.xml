<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

     <ImageView
         android:layout_width="300dp"
         android:layout_height="500dp"
         android:src="@mipmap/ic_logo"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintTop_toTopOf="parent"/>


     <TextView
         android:id="@+id/tv_recognize"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toTopOf="@id/btn_post"
         android:gravity="center"
         android:padding="24dp"
         android:textColor="@color/black"
         android:textSize="18sp"
         android:text="You need to register your face before authenticating"/>


     <androidx.appcompat.widget.AppCompatButton
         android:id="@+id/btn_post"
         android:layout_width="match_parent"
         android:layout_height="40dp"
         app:layout_constraintEnd_toEndOf="parent"
         android:layout_marginEnd="16dp"
         app:layout_constraintBottom_toTopOf="@id/tv_authenticate"
         app:layout_constraintStart_toStartOf="parent"
         style="@style/FillButton"
         android:layout_marginBottom="24dp"
         android:text="@string/register"
         android:textColor="@color/white"
         />

     <TextView
         android:id="@+id/tv_authenticate"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toTopOf="@+id/iv_face"
         android:layout_marginBottom="32dp"
         android:gravity="center"
         android:textColor="@color/black"
         android:textSize="40sp"
         android:text="Authenticate"/>

     <ImageView
         android:id="@+id/iv_face"
         android:layout_width="60dp"
         android:layout_height="60dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         android:layout_marginBottom="90dp"
         app:tint="@color/black"
         app:layout_constraintBottom_toBottomOf="parent"
         android:src="@drawable/bio_ic_face"/>



</androidx.constraintlayout.widget.ConstraintLayout>

